<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hlebon.speciality.SpecialityModalController">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="ID" />
                <Label text="Название" GridPane.rowIndex="1" />
                <TextField fx:id="txtId" editable="false" disable="true" GridPane.columnIndex="1" />
                <TextField fx:id="txtName" promptText="Название" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Кафедра" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="departmentsChoiseBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#actionSave" text="Сохранить" />
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" text="Отмена" />
            </children>
        </HBox>
    </children>
</VBox>
